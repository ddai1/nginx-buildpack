worker_processes 1;
error_log stderr;
pid nginx.pid;
daemon off;

events {
	worker_connections 768;
}

http {
	include mime.types;
	server {
		listen <%= ENV['PORT'] %>;
		server_name  _;
		root <%= ENV['HOME'] %>;
		index index.html;
    location = /diagnostic {
      return 200;
      access_log off;
    }
	}
}
